  </head>
  <body>
    <h1><%= title %></h1>
    <form id="module_form" action="module" role="form" method="post">
      <div class="form-group">
        <label style="font-weight:bold;font-size:larger;">Module Info</label>
        <div class="form-group" id="div-mod-code">
          <label for="mod_code">Module Code</label>
          <input type="text" class="form-control" id="mod_code" name="mod_code" placeholder="Enter Module Code" required="required">
        </div>
        <div class="form-group" id="div-mod-name">
          <label for="mod_name">Module Name</label>
          <input type="text" class="form-control" id="mod_name" name="mod_name" placeholder="Enter Module Name" required="required">
        </div>
        <div class="form-group" id="div-sem">
          <label for="sem">Semester</label>
          <select class="form-control" id="sem" name="sem" required="required">
            <option value="" disabled="disabled" selected="selected">Select Semester</option>
            <option value="1">Semester 1</option>
            <option value="2">Semester 2</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label style="font-weight:bold;font-size:larger;">Lecture Slot Info</label>
        <div class="form-group">
          <label for="day">Lecture Day</label>
          <select class="form-control" id="day" name="day" required="required">
            <option value="" disabled="disabled" selected="selected">Select Lecture Day</option>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
          </select>
        </div>
        <div class="form-group">
          <label for="start_time">Lecture Start Time</label>
          <input type="time" class="form-control" id="start_time"
                 name="start_time" required="required">
        </div>
        <div class="form-group">
          <label for="end_time">Lecture End Time</label>
          <input type="time" class="form-control" id="end_time"
                 name="end_time" required="required">
        </div>
        <div class="form-group">
          <label for="quota">Lecture Quota</label>
          <input type="number" class="form-control" id="quota" name="quota"
                 placeholder="Enter Lecture Quota" required="required">
        </div>
      </div>
      <div id="btn-submit">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <table class="table" id="table-modules">
      <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Module Code</th>
        <th scope="col">Module Name</th>
        <th scope="col">Semester</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
      <% let i = 1; %>
      <% modules.forEach(module => { %>
        <tr>
          <td><%= i %></td>
          <td><%= module.mod_code %></td>
          <td><%= module.mod_name %></td>
          <td><%= module.sem %></td>
          <td>
            <input type="button" id="btn-delete-module" value="Delete"/>
            <!-- TODO: When LECTURES button is clicked, show all lecture slots for that row's module code -->
            <input type="button" id="btn-lectures" value="Lectures"/>
          </td>
        </tr>
        <% i++; %>
      <% }); %>
      </tbody>
    </table>
    <div class="form-group">
      <button type="submit" class="btn btn-primary"
              onclick="window.location.href='dashboard_admin'">Back to Home</button>
    </div>
    <div id="div-lecture-slots">
      <table class="table" id="table-lectures">
        <tr>
          <th>Day</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Quota</th>
          <th>Module Code</th>
          <th>Action</th>
        </tr>
        <% lectures.forEach(lecture => { %>
          <tr>
            <td><%= lecture.day %></td>
            <td><%= lecture.s_time_lect %></td>
            <td><%= lecture.e_time_lect %></td>
            <td><%= lecture.quota %></td>
            <td><%= lecture.mod_code %></td>
            <td>
              <!-- TODO: Add functionality for the DELETE button to delete the row -->
              <input type="button" id="btn-delete-lecture" value="Delete"/>
            </td>
          </tr>
        <% }); %>
      </table>
    </div>
    <script>
      $("#table-modules").on('click','#btn-delete-module',function() {
        const currentRow = $(this).closest("tr"); // get the current row
        const mod_code = currentRow.find("td:eq(1)").text(); // get current row 3rd TD
        window.location.href='delete_module?module=' + mod_code;
